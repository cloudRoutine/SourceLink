<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <UsingTask TaskName="SourceLink.SourceLinkTask" AssemblyFile="SourceLink.Build.dll" />

  <PropertyGroup>
    <CompileDependsOn>SourceLink;$(CompileDependsOn)</CompileDependsOn>
  </PropertyGroup>
  
  <Target Name="SourceLink" Condition="$(SourceLink) != ''">
    <SourceLink.SourceLinkTask Verbose="$(SourceLinkVerbose)"
        Url="$(SourceLinkUrl)" ProjectDirectory="$(MSBuildProjectDirectory)" Sources="@(Compile)" TargetPath="$(TargetPath)" />
  </Target>

</Project>